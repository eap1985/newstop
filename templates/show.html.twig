{% extends '@NewsTop/base.html.twig' %}

{% block newstop_title %}{{ event.name }}{% endblock %}

{% block newstop_body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1>{{ event.name }}</h1>
            </div>

        </div>
        <div class="row">
            <div class="col">
                <div class="event__info-block event-date">
                    {% if event.createdAt is not empty %}
                        {{ event.createdAt | ru_datetime }}
                    {% else %}
                        {{ event.createdAt | ru_datetime }}
                    {% endif %}
                </div>

                {% if event.razdel is not empty %}
                    <div class="event__info-block event-place">{{ event.razdel }}</div>
                {% endif %}
            </div>
        </div>

        <hr>

        <div>
            {{ event.opisanie | raw }}
        </div>
        {% if event.node is not null and event.bodyValue is not null %}
            <div>
             {{ event.bodyValue | raw }}
            </div>
        {% endif %}
        <br>

        <h4>Автор</h4>
        <p>{{ event.avtor }}</p>
    </div>



{% endblock %}
