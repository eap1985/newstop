<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{% block newstop_title %}{% endblock %}</title>
    {% block newstop_stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="stylesheet" type="text/css" href="/slider/css/component.css"/>
</head>
<body class="mrg">
<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Сайт</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Домой</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('newstop.index') }}">Статьи</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="true">
                        Заказать услуги
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Консультация</a></li>
                        <li><a class="dropdown-item" href="#">Составление документов</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Анализ документов</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="{{ path('fz_user_profile_edit') }}" class="nav-link">Профиль</a>
                </li>
                <li class="nav-item">
                    {% if app.user %}
                        <a href="{{ path('logout') }}" class="nav-link">Выход</a>
                    {% else %}
                        <a href="{{ path('login') }}" class="nav-link">Вход</a>
                    {% endif %}
                </li>
                <li class="nav-item">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('sonata_admin_dashboard') }}" class="nav-link">Админ панель</a>
                    {% endif %}
                </li>
            </ul>
            <form class="d-flex" action="{{ path('search') }}">
                <input class="form-control me-2" name="search" id="search" type="search" placeholder="Search"
                       aria-label="Поиск">
                <button class="btn btn-outline-success" type="submit">Поиск</button>
            </form>

            <a href="{{ path('cart') }}" class="nav-link">
            <button type="button" class="btn btn-primary position-relative">
                <i class="fas fa-cart-plus"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    <span id="totalcart">0</span>
    <span class="visually-hidden"></span>
  </span>
            </button></a>
        </div>
    </div>

</nav>


{% if app.request.get('_route') == 'index' %}
    <div id="cbp-fwslider" class="cbp-fwslider">
        <ul>
            <li>
                <div><img src="{{ asset('slider/images/1.png') }}" alt="img01"/></div>
            </li>
            <li><a href="#"><img class="hidden" src="{{ asset('slider/images/2.png') }}" alt="img02"/></a></li>
            <li><a href="#"><img class="hidden" src="{{ asset('slider/images/3.png') }}" alt="img03"/></a></li>


        </ul>
    </div>
{% endif %}
{% set class = '' %}
{% if app.request.get('_route') != 'index' %}
    {% set class = 'main' %}
{% endif %}

<div class="container {{ class  }}">
    <nav aria-label="breadcrumb">
        {{ wo_render_breadcrumbs() }}
    </nav>


    {% for message in app.flashes('success') %}
        <div class="flash-notice alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        {% if app.request.get('_route') != 'cart' %}
            <div class="col-3">

                <div class="accordion" id="accordion">
                    <h4 class="accordion-header" id="headingOne">
                        Accordion Item #1
                    </h4>
                    <div class="accordion-item">

                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                             data-bs-parent="#accordionExample">
                            <div class="accordion-body">
